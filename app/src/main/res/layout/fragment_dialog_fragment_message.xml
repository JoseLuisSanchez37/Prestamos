<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imgv_image_response"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerInside"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_ok"/>

    <TextView
        android:id="@+id/txv_message_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAppearance="@android:style/TextAppearance.Medium" />

     <LinearLayout
         android:id="@+id/layout_password"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginLeft="16dp"
         android:layout_marginRight="16dp"
         android:layout_marginBottom="16dp"
         android:gravity="center_horizontal">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/password"
             android:textStyle="bold"
             android:textAppearance="@android:style/TextAppearance.Medium"
             android:layout_marginBottom="16dp"/>

         <TextView
             android:id="@+id/txv_show_password"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2432124"
             android:textStyle="bold"
             android:textAppearance="@android:style/TextAppearance.Medium"
             android:layout_marginBottom="16dp"/>

         <LinearLayout
             android:id="@+id/linear_container_payment_reference"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_marginBottom="16dp"
             android:visibility="gone">

             <View style="@style/separator"
                 android:layout_marginBottom="16dp"/>

             <TextView
                 android:id="@+id/txv_payment_reference"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textAppearance="@android:style/TextAppearance.Small"
                 android:textColor="@color/primary_dark_material_dark"
                 android:gravity="center"
                 android:text="@string/message_input_payment_reference"
                 android:layout_marginBottom="10dp"/>

             <EditText
                 android:id="@+id/edt_payment_reference"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textStyle="bold"
                 android:textAppearance="@android:style/TextAppearance.Medium"
                 android:hint="******************"
                 android:textColorHint="@color/asbestos"
                 android:background="@color/silver"
                 android:maxLength="20"
                 android:padding="5dp"
                 android:singleLine="true"
                 android:textColor="@android:color/black"/>

         </LinearLayout>

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_close_dialog_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="35"
            android:text="Cerrar"
            android:gravity="center"
            android:background="@drawable/selector_button"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <Button
            android:id="@+id/btn_send_payment_reference"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="65"
            android:text="Asignar Referencia"
            android:gravity="center"
            android:background="@drawable/selector_button"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginRight="16dp"
            android:visibility="gone"/>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
